<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.PanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="PanelPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Panel Base Class Examples" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Custom Panel Example -->
        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <Grid Width="200" Height="100" Background="LightYellow">
                <TextBlock Text="Panel is an abstract base class" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <TextBlock Text="Panel is the base class for layout controls like:" TextWrapping="Wrap" MaxWidth="300"/>
        <TextBlock Text="- StackPanel" Margin="10,5,0,0"/>
        <TextBlock Text="- Grid" Margin="10,0,0,0"/>
        <TextBlock Text="- Canvas" Margin="10,0,0,0"/>
        <TextBlock Text="- DockPanel" Margin="10,0,0,0"/>
        <TextBlock Text="- WrapPanel" Margin="10,0,0,5"/>
    </StackPanel>
</Page>
