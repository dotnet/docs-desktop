<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.ToolBarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="ToolBarPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button Content="New" ToolTip="Create new file"/>
                <Button Content="Open" ToolTip="Open file"/>
                <Button Content="Save" ToolTip="Save file"/>
                <Separator/>
                <Button Content="Cut" ToolTip="Cut"/>
                <Button Content="Copy" ToolTip="Copy"/>
                <Button Content="Paste" ToolTip="Paste"/>
                <Separator/>
                <ComboBox Width="80" SelectedIndex="0" ToolTip="Font size">
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                </ComboBox>
            </ToolBar>
            <ToolBar>
                <ToggleButton Content="Bold" ToolTip="Bold"/>
                <ToggleButton Content="Italic" ToolTip="Italic"/>
                <ToggleButton Content="Underline" ToolTip="Underline"/>
                <Separator/>
                <Button Content="Left" ToolTip="Align left"/>
                <Button Content="Center" ToolTip="Align center"/>
                <Button Content="Right" ToolTip="Align right"/>
            </ToolBar>
        </ToolBarTray>
        
        <TextBlock Grid.Row="1" Text="ToolBar controls provide quick access to commonly used commands and settings." 
                   TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="300"/>
    </Grid>
</Page>
