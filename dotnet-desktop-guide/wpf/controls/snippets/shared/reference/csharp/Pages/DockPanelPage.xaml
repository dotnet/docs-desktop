<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.DockPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="DockPanelPage">
    <Border Margin="20" BorderBrush="Gray" BorderThickness="1" Width="300" Height="200">
        <DockPanel>
            <Button Content="Top" DockPanel.Dock="Top" Background="LightCoral" Padding="5"/>
            <Button Content="Bottom" DockPanel.Dock="Bottom" Background="LightGreen" Padding="5"/>
            <Button Content="Left" DockPanel.Dock="Left" Background="LightBlue" Padding="5"/>
            <Button Content="Right" DockPanel.Dock="Right" Background="LightYellow" Padding="5"/>
            <TextBlock Text="Center (fills remaining space)" Background="LightGray" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10"/>
        </DockPanel>
    </Border>
</Page>
