<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.PasswordBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="PasswordBoxPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
        <TextBlock Text="Login Form:" FontWeight="Bold" Margin="5"/>
        
        <TextBlock Text="Username:" Margin="5,10,5,2"/>
        <TextBox Text="user@example.com" Margin="5,0,5,5"/>
        
        <TextBlock Text="Password:" Margin="5,10,5,2"/>
        <PasswordBox x:Name="DefaultPassword" Margin="5,0,5,5"/>
        
        <TextBlock Text="Confirm Password:" Margin="5,10,5,2"/>
        <PasswordBox PasswordChar="?" Margin="5,0,5,5"/>
        
        <TextBlock Text="Disabled Password Field:" Margin="5,10,5,2"/>
        <PasswordBox IsEnabled="False" Margin="5,0,5,10"/>
        
        <Button Content="Login" Padding="20,5" HorizontalAlignment="Center"/>
        
        <TextBlock Text="Note: Password characters are masked for security" 
                   FontStyle="Italic" FontSize="10" Margin="10" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
