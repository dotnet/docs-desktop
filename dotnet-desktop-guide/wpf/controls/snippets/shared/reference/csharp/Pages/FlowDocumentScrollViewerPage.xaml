<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.FlowDocumentScrollViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="FlowDocumentScrollViewerPage">
    <Grid Margin="20">
        <FlowDocumentScrollViewer x:Name="flowDocScrollViewer">
            <FlowDocumentScrollViewer.Document>
                <FlowDocument>
                    <Paragraph>
                        <Bold>FlowDocumentScrollViewer Control</Bold>
                    </Paragraph>
                    <Paragraph>
                        This control displays FlowDocument content in a continuous scrolling view.
                        It's ideal for reading long documents without page breaks.
                    </Paragraph>
                    <Paragraph>
                        Users can scroll through the entire document smoothly, and the control
                        provides zoom functionality and a simple toolbar.
                    </Paragraph>
                    <Paragraph>
                        This is the simplest way to display FlowDocument content when you
                        want a continuous reading experience.
                    </Paragraph>
                </FlowDocument>
            </FlowDocumentScrollViewer.Document>
        </FlowDocumentScrollViewer>
    </Grid>
</Page>
