<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.ThumbPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500"
      Title="ThumbPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Basic Thumb:" FontWeight="Bold" Margin="10"/>
        
        <Border BorderBrush="LightGray" BorderThickness="1" Width="200" Height="80" Margin="10">
            <Grid>
                <Thumb x:Name="BasicThumb" 
                       Width="20" Height="40" 
                       DragDelta="Thumb_DragDelta"/>
            </Grid>
        </Border>
        
        <TextBlock Text="Styled Thumb with Border:" FontWeight="Bold" Margin="10,20,10,10"/>
        
        <Border BorderBrush="LightGray" BorderThickness="1" Width="200" Height="80" Margin="10">
            <Canvas>
                <Thumb x:Name="StyledThumb" 
                       Width="50" Height="50" 
                       Canvas.Left="75" Canvas.Top="15"
                       DragDelta="Thumb_DragDelta">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Border Background="Orange" 
                                    BorderBrush="DarkOrange" 
                                    BorderThickness="2" 
                                    CornerRadius="5">
                                <Viewbox Width="24" Height="24"><Canvas Width="24" Height="24"><Path Data="M13,6V11H18V7.75L22.25,12L18,16.25V13H13V18H16.25L12,22.25L7.75,18H11V13H6V16.25L1.75,12L6,7.75V11H11V6H7.75L12,1.75L16.25,6H13Z" Fill="White"/></Canvas></Viewbox>
                            </Border>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Canvas>
        </Border>
        
        <TextBlock Text="Resize Handle Example:" FontWeight="Bold" Margin="10,20,10,10"/>
        
        <Border x:Name="ResizableBox" 
                BorderBrush="Black" 
                BorderThickness="2" 
                Width="150" Height="100" 
                Margin="10"
                >
            <Grid>
                <TextBlock Text="Drag corner to resize" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                <Thumb x:Name="ResizeThumb" 
                       Width="16" Height="16" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Bottom"
                       Cursor="SizeNWSE"
                       DragDelta="ResizeThumb_DragDelta">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Grid>
                                <Path Data="M 2,14 L 14,2 M 6,14 L 14,6 M 10,14 L 14,10 M 14,14 L 14,14"
                                      Stroke="DarkGray" 
                                      StrokeThickness="1.5"/>
                            </Grid>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Grid>
        </Border>
    </StackPanel>
</Page>
