<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.PopupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="PopupPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Show Basic Popup" Click="ShowBasicPopup_Click" Margin="5" Padding="10"/>
        <Button Content="Show Styled Popup" Click="ShowStyledPopup_Click" Margin="5" Padding="10"/>
        <Button Content="Show Popup with Controls" Click="ShowControlsPopup_Click" Margin="5" Padding="10"/>
        
        <!-- Basic Popup -->
        <Popup x:Name="BasicPopup" PlacementTarget="{Binding ElementName=ShowBasicPopup}" 
               Placement="Bottom" StaysOpen="False">
            <Border Background="Yellow" BorderBrush="Black" BorderThickness="1" Padding="10">
                <TextBlock Text="This is a basic popup!"/>
            </Border>
        </Popup>
        
        <!-- Styled Popup -->
        <Popup x:Name="StyledPopup" PlacementTarget="{Binding ElementName=ShowStyledPopup}" 
               Placement="Right" StaysOpen="False">
            <Border Background="LightBlue" BorderBrush="DarkBlue" BorderThickness="2" 
                    CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Styled Popup" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="This popup has custom styling with rounded corners."/>
                </StackPanel>
            </Border>
        </Popup>
        
        <!-- Popup with Controls -->
        <Popup x:Name="ControlsPopup" PlacementTarget="{Binding ElementName=ShowControlsPopup}" 
               Placement="Top" StaysOpen="False" Width="200">
            <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Popup with Controls" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox Text="Enter text here" Margin="0,0,0,5"/>
                    <CheckBox Content="Enable feature" Margin="0,0,0,5"/>
                    <Button Content="OK" HorizontalAlignment="Right" Padding="10,2"/>
                </StackPanel>
            </Border>
        </Popup>
        
        <TextBlock Text="Click buttons above to show different popup styles" 
                   FontStyle="Italic" Margin="20"/>
    </StackPanel>
</Page>
