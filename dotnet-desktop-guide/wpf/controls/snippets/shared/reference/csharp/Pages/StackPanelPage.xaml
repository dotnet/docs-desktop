<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.StackPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="StackPanelPage">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Vertical StackPanel:" FontWeight="Bold" Margin="2"/>
                <Button Content="Button 1" Margin="2"/>
                <Button Content="Button 2" Margin="2"/>
                <Button Content="Button 3" Margin="2"/>
                <TextBox Text="TextBox" Margin="2"/>
            </StackPanel>
        </Border>
        
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                <TextBlock Text="Horizontal:" FontWeight="Bold" Margin="2" VerticalAlignment="Center"/>
                <Button Content="Btn1" Margin="2"/>
                <Button Content="Btn2" Margin="2"/>
                <Button Content="Btn3" Margin="2"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
