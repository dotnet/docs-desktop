<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.ComboBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="ComboBoxPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
        <ComboBox IsEnabled="False" Margin="5" Padding="5">
            <ComboBoxItem Content="Disabled Option" IsSelected="True"/>
        </ComboBox>
        <ComboBox IsEditable="True" Text="Editable ComboBox" Margin="5" Padding="5">
            <ComboBoxItem Content="Item A"/>
            <ComboBoxItem Content="Item B"/>
            <ComboBoxItem Content="Item C"/>
        </ComboBox>
        <ComboBox Margin="5" Padding="5" SelectedIndex="0" IsDropDownOpen="True">
            <ComboBoxItem Content="Option 1"/>
            <ComboBoxItem Content="Option 2"/>
            <ComboBoxItem Content="Option 3"/>
        </ComboBox>
        
    </StackPanel>
</Page>
