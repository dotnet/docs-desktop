<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.BorderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="BorderPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border BorderBrush="Blue" BorderThickness="2" Padding="10" Margin="5">
            <TextBlock Text="Simple Border"/>
        </Border>
        
        <Border BorderBrush="Red" BorderThickness="3" CornerRadius="5" Padding="10" Margin="5">
            <TextBlock Text="Rounded Border"/>
        </Border>
        
        <Border BorderBrush="Green" BorderThickness="1" Background="LightGreen" Padding="10" Margin="5">
            <TextBlock Text="Border with Background"/>
        </Border>
        
        <Border BorderBrush="Purple" BorderThickness="2,4,2,4" Padding="10" Margin="5">
            <TextBlock Text="Different Thickness Border"/>
        </Border>
    </StackPanel>
</Page>
