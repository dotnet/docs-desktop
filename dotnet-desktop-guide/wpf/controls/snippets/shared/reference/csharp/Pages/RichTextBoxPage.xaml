<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.RichTextBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="RichTextBoxPage">
    <StackPanel Margin="20">
        <TextBlock Text="RichTextBox Examples:" FontWeight="Bold" Margin="5"/>
        
        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <RichTextBox x:Name="SampleRichTextBox" Height="120" Padding="5">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="This is a " />
                        <Run Text="RichTextBox" FontWeight="Bold" />
                        <Run Text=" with " />
                        <Run Text="formatted text" FontStyle="Italic" Foreground="Blue" />
                        <Run Text=". It supports " />
                        <Run Text="multiple" FontSize="16" />
                        <Run Text=" " />
                        <Run Text="formatting" TextDecorations="Underline" />
                        <Run Text=" options." />
                    </Paragraph>
                    <Paragraph>
                        <Run Text="- Bullet points" />
                        <LineBreak />
                        <Run Text="- " />
                        <Run Text="Different colors" Foreground="Red" />
                        <LineBreak />
                        <Run Text="- " />
                        <Run Text="Various sizes" FontSize="12" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Border>
        
        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <RichTextBox Height="80" Padding="5">
                <FlowDocument>
                    <Paragraph TextAlignment="Center">
                        <Run Text="Centered paragraph with " FontFamily="Arial" />
                        <Run Text="mixed fonts" FontFamily="Times New Roman" FontSize="14" />
                        <Run Text=" and " />
                        <Run Text="styles" FontWeight="Bold" Background="Yellow" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </Border>
        
        <TextBlock Text="RichTextBox supports rich formatting, hyperlinks, and embedded content" 
                   FontStyle="Italic" FontSize="10" Margin="5"/>
    </StackPanel>
</Page>
