<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.ImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="ImagePage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Placeholder images using geometric shapes -->
        <Border BorderBrush="Gray" BorderThickness="1" Width="150" Height="100" Margin="5">
            <Grid Background="LightGray">
                <Image Source="/winter1.jpg" />
                <TextBlock Text="Stretched Image" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                          FontSize="10" Foreground="Black" Margin="2"/>
            </Grid>
        </Border>

        <Border BorderBrush="Gray" BorderThickness="1" Width="100" Height="100" Margin="5">

            <Grid Background="LightGray" RowDefinitions="Auto, Auto">
                <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="75">
                    <Ellipse Width="Auto" Height="Auto">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/winter1.jpg" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <TextBlock Text="Clipped Image" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                          FontSize="10" Foreground="Black" Margin="2" Grid.Row="1"/>
            </Grid>
        </Border>
        
    </StackPanel>
</Page>
