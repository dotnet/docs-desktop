<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.CheckBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="CheckBoxPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <CheckBox Content="Unchecked CheckBox" Margin="5"/>
        <CheckBox Content="Checked CheckBox" IsChecked="True" Margin="5"/>
        <CheckBox Content="Indeterminate CheckBox" IsThreeState="True" IsChecked="{x:Null}" Margin="5"/>
        <CheckBox Content="Disabled CheckBox" IsEnabled="False" Margin="5"/>
    </StackPanel>
</Page>
