<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.CanvasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="CanvasPage">
    <Border Margin="20" BorderBrush="Gray" BorderThickness="1" Width="300" Height="200">
        <Canvas Background="AliceBlue">
            <Rectangle Fill="Red" Width="50" Height="30" Canvas.Left="20" Canvas.Top="20"/>
            <Ellipse Fill="Blue" Width="40" Height="40" Canvas.Left="100" Canvas.Top="50"/>
            <TextBlock Text="Canvas positioning" Canvas.Left="150" Canvas.Top="30" FontWeight="Bold"/>
            <Button Content="Positioned Button" Canvas.Left="50" Canvas.Top="100" Padding="10,5"/>
            <Line Stroke="Green" StrokeThickness="3" X1="10" Y1="150" X2="280" Y2="170"/>
        </Canvas>
    </Border>
</Page>
