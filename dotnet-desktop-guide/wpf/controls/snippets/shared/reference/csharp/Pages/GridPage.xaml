<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.GridPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="GridPage">
    <Border Margin="20" BorderBrush="Gray" BorderThickness="1">
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Header 1" Background="LightBlue" Padding="5"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Header 2" Background="LightGreen" Padding="5"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Content A" Background="LightCoral" Padding="5" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Content B (wider column)" Background="LightYellow" Padding="5" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="Footer spanning both columns" Background="LightGray" Padding="5" HorizontalAlignment="Center"/>
        </Grid>
    </Border>
</Page>
