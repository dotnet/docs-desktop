<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.TextBlockPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="TextBlockPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="TextBlock Examples" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock Text="Default TextBlock" Margin="5"/>
        <TextBlock Text="Bold TextBlock" FontWeight="Bold" Margin="5"/>
        <TextBlock Text="Italic TextBlock" FontStyle="Italic" Margin="5"/>
        <TextBlock Text="Large TextBlock" FontSize="16" Margin="5"/>
        <TextBlock Text="Colored TextBlock" Foreground="DodgerBlue" Margin="5"/>
        
        <TextBlock Margin="5,15,5,5">
            <Run Text="Mixed " />
            <Run Text="formatting " FontWeight="Bold"/>
            <Run Text="in one " />
            <Run Text="TextBlock" FontStyle="Italic" Foreground="Red"/>
        </TextBlock>
        
        <TextBlock Text="This is a long text that will wrap to multiple lines when the container width is limited. TextBlock supports automatic text wrapping." 
                   TextWrapping="Wrap" MaxWidth="200" Margin="5,15,5,5"/>
    </StackPanel>
</Page>
