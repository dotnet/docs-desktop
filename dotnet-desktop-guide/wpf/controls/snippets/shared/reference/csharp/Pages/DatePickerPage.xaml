<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.DatePickerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="DatePickerPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Default DatePicker:" Margin="5"/>
        <DatePicker x:Name="DefaultDatePicker" Margin="5" Width="200"/>
        
        <TextBlock Text="DatePicker with Selected Date:" Margin="5,15,5,5"/>
        <DatePicker x:Name="PreselectedDatePicker" Margin="5" Width="200" SelectedDate="2026-03-14"/>
        
        <TextBlock Text="Disabled DatePicker:" Margin="5,15,5,5"/>
        <DatePicker IsEnabled="False" Margin="5" Width="200" SelectedDate="2026-03-14"/>
    </StackPanel>
</Page>
