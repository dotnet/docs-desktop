<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.FlowDocumentPageViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="FlowDocumentPageViewerPage">
    <Grid Margin="20">
        <FlowDocumentPageViewer x:Name="flowDocPageViewer">
            <FlowDocumentPageViewer.Document>
                <FlowDocument>
                    <Paragraph>
                        <Bold>FlowDocumentPageViewer Control</Bold>
                    </Paragraph>
                    <Paragraph>
                        This control displays FlowDocument content in a page-by-page view mode.
                        It provides navigation controls to move between pages.
                    </Paragraph>
                    <Paragraph>
                        Unlike FlowDocumentScrollViewer, this control shows one page at a time
                        with page navigation controls at the bottom.
                    </Paragraph>
                </FlowDocument>
            </FlowDocumentPageViewer.Document>
        </FlowDocumentPageViewer>
    </Grid>
</Page>
