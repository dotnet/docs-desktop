<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.ButtonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="ButtonPage">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Default Button" Margin="5" Padding="10,5"/>
        <Button Content="Primary Button" Background="DodgerBlue" Foreground="White" Margin="5" Padding="10,5"/>
        <Button Content="Disabled Button" IsEnabled="False" Margin="5" Padding="10,5"/>
        <Button Content="Large Button" FontSize="16" Margin="5" Padding="15,10"/>
    </StackPanel>
</Page>
