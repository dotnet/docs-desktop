<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="AllTemplatesCS.Pages.DocumentViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AllTemplatesCS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="DocumentViewerPage">
    <Grid Margin="20">
        <DocumentViewer x:Name="docViewer">
            <DocumentViewer.Document>
                <FixedDocument>
                    <PageContent>
                        <FixedPage Width="816" Height="1056">
                            <Canvas>
                                <TextBlock Canvas.Left="50" Canvas.Top="50" 
                                           FontSize="18" FontWeight="Bold"
                                           Text="DocumentViewer with FixedDocument"/>
                                <TextBlock Canvas.Left="50" Canvas.Top="100" 
                                           FontSize="12" Width="700" TextWrapping="Wrap"
                                           Text="This is a sample fixed document displayed in a DocumentViewer control. Fixed documents maintain exact positioning and are ideal for print-ready content."/>
                                <TextBlock Canvas.Left="50" Canvas.Top="150" 
                                           FontSize="12" Width="700" TextWrapping="Wrap"
                                           Text="You can navigate through pages, zoom in/out, and print the document using the built-in toolbar."/>
                            </Canvas>
                        </FixedPage>
                    </PageContent>
                </FixedDocument>
            </DocumentViewer.Document>
        </DocumentViewer>
    </Grid>
</Page>
